    {% if product.compare_at_price_max > product.price and product.available %}
        <div class="sale-badge">{{ 'products.product.on_sale' | t }}</div>
    {% endif %}

    {% unless product.available %}
        <div class="sold-out-badge">{{ 'products.product.sold_out' | t }}</div>
    {% endunless %}
!-->
</div>
